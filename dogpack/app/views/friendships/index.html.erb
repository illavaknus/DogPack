<div class="main-body container">
	<div class="row-fluid content-header">
		<div class="span12">
			<span class="lead header-text">Friends</span>
		</div>
	</div>
	<div class="row-fluid content-body">
		<% User.where("").order("name").each_with_index do |u, i| %>
		<% if i % 3 == 0 %>
		<div class="row-fluid">
		<% end %>
			<div id="dog1" class="span4">
				<a href="/users/<%= u.id %>"><img class="grid-photo" src="<%= u.image_url %>"></img></a>
				<div class="row-fluid">
					<span class="span5 lead username"><a href="/users/<%= u.id %>"><%= u.name %></a></span>
					<span class="span7 lead"><a class="btn btn-small btn-primary" href="/meetups/new?recipient_id=<%= u.id %>">Meetup!</a></span>
				</div>
			</div>
		<% if i % 3 == 2 %>
		</div>
		<% end %>
		<% end %>
	</div>
</div>
