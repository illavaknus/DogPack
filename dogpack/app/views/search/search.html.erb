<script src="http://maps.google.com/maps/api/js?sensor=true" type="text/javascript"></script>
<script type="text/javascript" src="/assets/jquery.ui.map.min.js"></script>
<script type="text/javascript" src="/assets/search.js"></script>
<% ['hidden-phone', 'visible-phone'].each do |c| %>
<div class="main-body container <%= c %>">
	<div class="row-fluid content-header">
		<div class="span12">
			<span class="lead header-text">Search</span>
		</div>
	</div>
  <div class="row-fluid content-row">
		<div class="span12">
			<form id="mapForm">
				<input id="searchTextField" autocomplete="off" placeholder="Enter a neighborhood" type="text" class="span10 search-query" data-provide="typeahead">
				<a id="locationButton" href="#" class="btn btn-success map-btn"><i class="icon-map-marker icon-white"></i></a>
				<button id="searchButton" type="submit" class="btn btn-primary map-btn"><i class="icon-search icon-white"></i></button>
			</form>
		</div>
	</div>
	<div class="row-fluid content-row">
		<div class="span12">
			<div class="tabbable tabs-below">
				<div id="searchTabContent" class="tab-content">
					<div class="tab-pane active" id="tab1">
						<div id="mapCanvas">
						</div>
					</div>
					<div class="tab-pane" id="tab2">
						<div id="listView">
						</div>
					</div>
				</div>
				<ul class="nav nav-tabs">
					<li class="active"><a href="#tab1" data-toggle="tab">Map View</a></li>
					<li><a href="#tab2" data-toggle="tab">List View</a></li>
				</ul>
			</div>
		</div>
	</div>
</div>
<%end%>
