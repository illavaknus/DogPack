<script type="text/javascript" src="/assets/jquery.ui.map.min.js"></script>
<script type="text/javascript" src="/assets/jquery.carouFredSel-6.2.1-packed.js"></script>
<script type="text/javascript" src="/assets/users.js"></script>
<!-- Body for Desktops and Mobile Browsers -->
<% ['hidden-phone', 'visible-phone'].each do |c| %>
<div class="main-body container <%= c %>">
	<div class="row-fluid content-header">
	  <div class="span7">
	 	 	<span class="lead header-text">Welcome <span class="username"><%= @user.name %></span></span>
		</div>
		<div class="span5">
		  <img id="dog-photo" src="<%= @user.image_url %>" class="span5 pull-right"> 
		</div>
	</div>
  <div class="row-fluid content-row">
		<div class="span12">
	  	<span class="lead">Invitations</span>
	    	<div class="row-fluid content-body">
	        <div class="list_carousel span12">
	          <%if c == 'hidden-phone'%>
	          <ul id="notif">
	          <%else%>
	           <ul id="notif-small">
	          <%end%>
          	<% @user.invitations.each do |m| %>
	        		<li>
          			<div class="offset1 span3">
          			<%= image_tag m.sender.image_url, :class=> "img-polaroid" %>
          			</div>
          			<div class="offset1 span7">
            			<%= m.sender.name %></br>
            			<%= m.date.strftime '%b %e, %l:%M %p' %></br>
            			<%= m.venue %></br>
            			<button class="btn btn-small btn-info">View&raquo;</button>
            		</div>
            	</li>
          	<% end %>
	          </ul> 
          <div class="clearfix"></div>
	        <a class="prev" id="notif_prev" href="#"><span>prev</span></a>
          <a class="next" id="notif_next" href="#"><span>next</span></a>
        </div>
    	</div>
    </div>
  </div>
    <div class="row-fluid content-row">
	    <div class="span12">
	    	<span class="lead">Upcoming Meetups</span>
	    		<div class="row-fluid content-body">
	        	<div class="list_carousel span12">
	          	<%if c == 'hidden-phone'%>
	          	<ul id="upcoming">
	          	<%else%>
	           	<ul id="upcoming-small">
	          	<%end%>
	         		<% @user.upcoming_meetups.each do |m| %>
		          	<li class="img">
		            	<div class="offset1 span3">
									<%= image_tag m.sender.image_url, :class=> "img-polaroid" %>
									</div>
		              <div class="offset1 span7">
		              	<%= m.sender.name %></br>
		             		<%= m.date.strftime '%b %e, %l:%M %p'%></br>
		              	<%= m.venue %></br>
		              	<button class="btn btn-small btn-info">View&raquo;</button>
		             	</div>
		            </li>
	            <% end %>
	            </ul> 
	            <div class="clearfix"></div>
	            <a class="prev" id="notif_prev" href="#"><span>prev</span></a>
	            <a class="next" id="notif_next" href="#"><span>next</span></a>
	        </div>
	    	</div>
	    </div>
    </div>
    <div class="row-fluid content-row">
	    <div class="span12">
	    	<span class="lead">Previous Meetups</span>
	    	<div class="row-fluid content-body">
	        <div class="list_carousel span12">
            <ul id="previous">
            	<% @user.previous_meetups.each do |m| %>
            		<li class="img-polaroid">
                	<div class="row-fluid">
                      <div class="span5">
		            				<%= image_tag m.sender.image_url, :class=> "img-polaroid" %>
                      </div>
                      <div class="offset1 span6">
		              			<%= m.sender.name %></br>
		              			<%= m.date.strftime '%b %e, %l:%M %p'%></br>
		              			<%= m.venue %></br>
		              			<% if m.has_reviewed(@user) %>
		              			<button class="btn btn-small btn-danger badReview disabled" value="<%=m.id%>"><i class="icon-thumbs-down"></i></button>
		                    <button class="btn btn-small btn-success goodReview disabled" id="<%=m.id%>"><i class="icon-thumbs-up"></i></button>
		                    <a href="<%= "/meetups/#{m.id}/reviews/new"%>"><button class="btn btn-small disabled" value="<%=m.id%>"><i class="icon-plus"></i></button></a>
		              			<% else %>
		              			<button class="btn btn-small btn-danger badReview" value="<%=m.id%>"><i class="icon-thumbs-down"></i></button>
		                    <button class="btn btn-small btn-success goodReview" value="<%=m.id%>"><i class="icon-thumbs-up"></i></button>
		                    <a href="<%= "/meetups/#{m.id}/reviews/new"%>"><button class="btn btn-small" value="<%=m.id%>"><i class="icon-plus"></i></button></a>
		              			<%end%>
	              			</div>
              		</div>
              	</li>
            	<% end %>
            </ul> 
            <div class="clearfix"></div>
            <a class="prev" id="notif_prev" href="#"><span>prev</span></a>
            <a class="next" id="notif_next" href="#"><span>next</span></a>
	        </div>
	    	</div>
	    </div>
    </div>
</div>
<%end%>
