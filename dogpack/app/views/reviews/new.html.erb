<div class="main-body container">
  <div class="row-fluid content-row">
  	<div class="span12">
    	<h1 class="content-header">How was your meetup?</h1>
		</div>
		<div class="row-fluid content-row">
			<div class="span5">
				<%= image_tag @reviewee.image_url, :class => 'img-polaroid span4'%>	
			</div>
			<div class="span7 lead">
				<div class="row-fluid">
					<span class="span2">With</span>
					<span class="span1"> : </span>
					<span class="membername span4"><%= @reviewee.name %></span>
				</div>
				<div class="row-fluid">
					<span class="span2">On</span>
					<span class="span1"> : </span>
					<span class="member-date span4"><%= @meetup.date.strftime '%b %e, %l:%M %p' %></span>
				</div>
				<div class="row-fluid">
					<span class="span2">At</span>
					<span class="span1"> : </span>
					<span class="member-location span4"><%= @meetup.venue %></span>
				</div>
			</div>
		</div>
		<div class="row-fluid content-body"  data-toggle="buttons-radio">
			<div class="offset2 span3">
				<button class="btn btn-large btn-danger" rel="tooltip" title="Not so much..."><i class="icon-thumbs-down"></i></button>
			</div>
			<div class="offset2 span3">
				<button class="btn btn-large btn-success" rel="tooltip" title="Loved it!"><i class="icon-thumbs-up"></i></button>
			</div>
			<div class="span2"></div>
		</div>
		<div class="row-fluid content-row">
    	<div class="span12">
      	<h1 class="content-header">Any additional comments?</h1>
				<div class="row-fluid">
				<textarea name="review comments" class="span12" ></textarea>
				</div>
				<div class="row-fluid">
					<a onclick="goBack()" id="cancelBtn" class="btn btn-danger btn-large">Cancel</a>
					<a class="btn btn-large btn-success" onclick="window.location='home.html?action=reviewed'" id="Submit">Submit</a>
				</div>
			</div>
		</div>
	</div>
</div>



