<div class="main-body container">
	<div class="row-fluid content-header">
	  <div class="span12">
	 		<span class="lead header-text">How was your meetup?</span>
	 	</div>
	</div>
	<div class="row-fluid content-row">
		<div class="span4">
			<img src="<%= @reviewee.image_url %>" class="img-polaroid profile-picture"> 
		</div>
		<div class="span8 lead">
			<div class="row-fluid">
				<span class="span2">With: </span>
				<span class="span6 username"><%= @reviewee.name %></span>
			</div>
			<div class="row-fluid">
				<span class="span2">On: </span>
				<span class="span6"><%= @meetup.date.strftime '%b %e, %l:%M %p' %></span>
			</div>
			<div class="row-fluid">
				<span class="span2">At: </span>
				<span class="span6"><%= @meetup.venue %></span>
			</div>
		</div>
	</div>
  <div class="row-fluid content-row">
		<%= form_for @review, :html => {:id => 'reviewForm'},  :url => { :action => 'create' } do |f| %>
		<input type="hidden" name="review[reviewer_id]" value="<%= @reviewer.id %>"  />
		<input type="hidden" name="review[reviewee_id]" value="<%= @reviewee.id %>" />
		<input type="hidden" name="review[meetup_id]" value="<%= @meetup.id %>" />
		<div class="row-fluid content-body"  data-toggle="buttons-radio">
			<div class="lead">Good or bad?</div>
			<label class="checkbox inline">
				<input type="radio" value="false" name="review[positive]"> <i class="icon-thumbs-down"></i>
			</label>
			<label class="checkbox inline">
				<input type="radio" value="true" name="review[positive]"> <i class="icon-thumbs-up"></i>
			</label>
			<!-- <div class="span2">
				<input href="#" class="btn btn-large btn-danger" type="radio" value="false" name="review[positive]"> <i class="icon-thumbs-down"></i></a>
			</div>
			<div class="span2">
				<input href="#" class="btn btn-large btn-success"type="radio" value="true" name="review[positive]" rel="tooltip" title="Loved it!"><i class="icon-thumbs-up"></i></a>
			</div>
			<div class="span4"></div> -->
		</div>
		<div class="row-fluid">
	  	<div class="span12">
	    	<div class="lead">Any additional comments?</div>
				<div class="row-fluid">
				<%= f.text_area :comment, :class => "span12", :rows=> "3" %>
				<!-- <textarea name="review comments" class="span12" ></textarea> -->
				</div>
				<div class="row-fluid">
					<a onclick="goBack()" id="cancelBtn" class="btn btn-danger btn-large">Cancel</a>
					<%= f.submit "Submit" , :class =>"btn btn-large btn-success"%>
				</div>
			</div>
		</div>
		<%end%>
	</div>
</div>



